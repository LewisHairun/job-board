{% extends 'base.html.twig' %}

{% block title %}Administration des permissions{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-lg-4 col-md-6" style="background: #f2f2f2;">
                {% include "admin/_menu_dashboard.html.twig" %}
            </div>
            <div class="col-lg-8 col-md-6">
                <a href="{{ path('admin_permission_new') }}" class="btn btn-sm btn-primary">Nouvelle permission</a>
                <div class="mt-3">
                    {% include "partials/_flash_message.html.twig" %}
                </div>
                <table class="table">
                    <tr>
                        <th>Nom</th>
                        <th>Action</th>
                    </tr>
                    {% for permission in permissions %}
                        <tr>
                            <td>{{ permission.name }}</td>
                            <td class="d-flex gap-1">
                                <a href="{{ path('admin_permission_edit', {'id': permission.id}) }}" class="btn btn-sm btn-success">Editer</a>
                                {% include "admin/permission/_delete_form.html.twig" %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="2">Aucun r√¥le</td>
                        </tr>
                    {% endfor %}
                    {% if permissions | length > 0 %}
                        <div class="pagination d-flex justify-content-center">
                            {{ knp_pagination_render(permissions) }}
                        </div>
                    {% endif %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
